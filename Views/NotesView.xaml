<UserControl x:Class="QuickStarted.Views.NotesView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:QuickStarted.Controls"
             xmlns:converters="clr-namespace:QuickStarted.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600">
    <UserControl.Resources>
        <converters:FilePathToDirectoryConverter x:Key="FilePathToDirectoryConverter" />
        <!--  自定义 MarkdownViewer 样式（从 MainWindow 抽离）  -->
        <Style x:Key="CustomMarkdownStyle" TargetType="controls:MarkdownViewer">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  分类列表  -->
        <Border
            Grid.Column="0"
            Margin="0,0,5,0"
            BorderBrush="#664FC3F7"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    Margin="10,10,10,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="分类" />
                <ItemsControl ItemsSource="{Binding NoteCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Padding="10,5"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding DataContext.SelectCategoryCommand, ElementName=Root}"
                                CommandParameter="{Binding}"
                                Content="{Binding CategoryName}"
                                Foreground="#CCCCCC" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!--  文件列表  -->
        <Border
            Grid.Column="1"
            Margin="5,0"
            BorderBrush="#664FC3F7"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    Margin="10,10,10,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="文件" />
                <ItemsControl ItemsSource="{Binding SelectedCategory.NoteFiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Padding="10,5"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding DataContext.SelectNoteFileCommand, ElementName=Root}"
                                CommandParameter="{Binding}"
                                Content="{Binding FileName}"
                                Foreground="#CCCCCC" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!--  Markdown内容显示  -->
        <Border
            Grid.Column="2"
            Margin="5,0,0,0"
            BorderBrush="#664FC3F7"
            BorderThickness="1"
            CornerRadius="5">
            <ScrollViewer Padding="15" Background="Transparent">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid Width="18" Background="#664FC3F7">
                                        <Track Name="PART_Track" IsDirectionReversed="True">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton
                                                    Width="0"
                                                    Height="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="ScrollBar.PageUpCommand" />
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Rectangle
                                                                Fill="#CC000000"
                                                                RadiusX="4"
                                                                RadiusY="4">
                                                                <Rectangle.Style>
                                                                    <Style TargetType="Rectangle">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Fill" Value="#FF000000" />
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Rectangle.Style>
                                                            </Rectangle>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton
                                                    Width="0"
                                                    Height="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="ScrollBar.PageDownCommand" />
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>

                <controls:MarkdownViewer
                    BaseUri="{Binding SelectedNoteFile.FilePath, Converter={StaticResource FilePathToDirectoryConverter}}"
                    Markdown="{Binding MarkdownContent}"
                    Style="{StaticResource CustomMarkdownStyle}" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>