<Window
    x:Class="QuickStarted.Views.VideoPlayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding VideoTitle}"
    Width="900"
    Height="600"
    MinWidth="600"
    MinHeight="400"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    AllowsTransparency="True"
    ResizeMode="CanResizeWithGrip"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- è½¬æ¢å™¨ -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!--  æŽ§åˆ¶æŒ‰é’®æ ·å¼  -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  è¿›åº¦æ¡æ ·å¼  -->
        <Style x:Key="VideoSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="#44FFFFFF" />
            <Setter Property="Foreground" Value="#4FC3F7" />
            <Setter Property="Height" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <!-- ä¸»å®¹å™¨è¾¹æ¡† -->
    <Border Background="#FF1E1E1E" CornerRadius="8" BorderBrush="#664FC3F7" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- è‡ªå®šä¹‰æ ‡é¢˜æ  -->
            <Grid Grid.Row="0" Background="#22FFFFFF" Height="35" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- åº”ç”¨å›¾æ ‡ -->
                <TextBlock Grid.Column="0" 
                           Text="ðŸŽ¬" 
                           FontSize="14" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="10,0,8,0"/>
                
                <!-- æ ‡é¢˜ -->
                <TextBlock Grid.Column="1"
                           Text="{Binding VideoTitle}"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
                
                <!-- å…¨å±æŒ‰é’® -->
                <Button Grid.Column="2"
                        Name="MaximizeButton"
                        Width="28" Height="28"
                        Margin="2,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        ToolTip="å…¨å±"
                        Click="MaximizeButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#44FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#66FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="â›¶" FontSize="10"/>
                </Button>
                
                <!-- å…³é—­æŒ‰é’® -->
                <Button Grid.Column="3"
                        Name="CloseButton"
                        Width="28" Height="28"
                        Margin="2,0,8,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        ToolTip="å…³é—­"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E81123"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#F1707A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âœ•" FontSize="10"/>
                </Button>
            </Grid>

            <!--  è§†é¢‘æ’­æ”¾åŒºåŸŸ  -->
            <Border
                Grid.Row="1"
                Margin="10,5,10,5"
                Background="Black"
                CornerRadius="4">
            <Grid>
                <!--  MediaElement è§†é¢‘æ’­æ”¾å™¨  -->
                <MediaElement
                    x:Name="VideoPlayer"
                    LoadedBehavior="Manual"
                    MediaEnded="VideoPlayer_MediaEnded"
                    MediaFailed="VideoPlayer_MediaFailed"
                    MediaOpened="VideoPlayer_MediaOpened"
                    Source="{Binding VideoSource}"
                    Stretch="Uniform"
                    UnloadedBehavior="Manual" />

                <!--  åŠ è½½æŒ‡ç¤ºå™¨  -->
                <Border Background="#AA000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Foreground="White"
                            Text="â³" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="åŠ è½½ä¸­..." />
                    </StackPanel>
                </Border>

                <!--  é”™è¯¯æç¤º  -->
                <Border Background="#AA000000" Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            Foreground="Red"
                            Text="âŒ" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding ErrorMessage}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!--  æŽ§åˆ¶é¢æ¿  -->
        <Border
            Grid.Row="2"
            Margin="10,0,10,10"
            Padding="15,10"
            Background="#FF2D2D2D">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  è¿›åº¦æ¡  -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="White"
                        Text="{Binding CurrentTimeText}" />

                    <Slider
                        x:Name="ProgressSlider"
                        Grid.Column="1"
                        Maximum="{Binding TotalSeconds}"
                        Minimum="0"
                        PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                        Style="{StaticResource VideoSliderStyle}"
                        ValueChanged="ProgressSlider_ValueChanged"
                        Value="{Binding CurrentSeconds}" />

                    <TextBlock
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="White"
                        Text="{Binding TotalTimeText}" />
                </Grid>

                <!--  æŽ§åˆ¶æŒ‰é’®  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Click="PlayPause_Click"
                        Style="{StaticResource ControlButtonStyle}"
                        ToolTip="æ’­æ”¾/æš‚åœ">
                        <TextBlock FontSize="16" Text="{Binding PlayPauseIcon}" />
                    </Button>

                    <Button
                        Click="Stop_Click"
                        Style="{StaticResource ControlButtonStyle}"
                        ToolTip="åœæ­¢">
                        <TextBlock FontSize="14" Text="â¹" />
                    </Button>

                    <Separator Width="20" Background="Transparent" />

                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="éŸ³é‡:" />

                    <Slider
                        x:Name="VolumeSlider"
                        Width="80"
                        VerticalAlignment="Center"
                        Maximum="1"
                        Minimum="0"
                        ValueChanged="VolumeSlider_ValueChanged"
                        Value="{Binding Volume}" />

                    <Separator Width="20" Background="Transparent" />

                    <Button
                        Click="FullScreen_Click"
                        Style="{StaticResource ControlButtonStyle}"
                        ToolTip="å…¨å±">
                        <TextBlock FontSize="14" Text="â›¶" />
                    </Button>

                    <Button
                        Click="Close_Click"
                        Style="{StaticResource ControlButtonStyle}"
                        ToolTip="å…³é—­">
                        <TextBlock FontSize="14" Text="âœ•" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>