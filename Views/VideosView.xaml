<UserControl x:Class="QuickStarted.Views.VideosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:QuickStarted.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600">
    
    <UserControl.Resources>
        <!-- 转换器 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
        
        <!-- 视频卡片样式 -->
        <Style x:Key="VideoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="BorderBrush" Value="#664FC3F7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#884FC3F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 播放按钮样式 -->
        <Style x:Key="PlayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#664FC3F7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#884FC3F7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#AA4FC3F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border
        Margin="20"
        BorderBrush="#664FC3F7"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Margin="20,20,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Column="0"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Text="视频教程" />
                
                <Button Grid.Column="1"
                        Style="{StaticResource PlayButtonStyle}"
                        Command="{Binding RefreshVideosCommand}"
                        ToolTip="刷新视频列表">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="刷新"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- 状态栏 -->
            <Border Grid.Row="1" 
                    Background="#22FFFFFF" 
                    Margin="20,0,20,10" 
                    Padding="15,8" 
                    CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusMessage}"
                               Foreground="#CCCCCC"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    
                    <!-- 加载指示器 -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="⏳" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="加载中..." Foreground="#CCCCCC" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 视频列表 -->
            <ScrollViewer Grid.Row="2" 
                          Padding="20,0,20,20"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                
                <Grid>
                    <!-- 无视频时的提示 -->
                    <Border Visibility="{Binding HasVideos, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                            Height="200"
                            Background="#22FFFFFF"
                            CornerRadius="8">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📹" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="暂无视频教程"
                                       FontSize="16"
                                       Foreground="#AAAAAA"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="请切换到有视频教程的程序"
                                       FontSize="12"
                                       Foreground="#888888"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 视频网格 -->
                    <ItemsControl ItemsSource="{Binding Videos}"
                                  Visibility="{Binding HasVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource VideoCardStyle}" 
                                    Width="280" 
                                    Height="200"
                                    MouseLeftButtonUp="VideoCard_MouseLeftButtonUp"
                                    Tag="{Binding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 预览图区域 -->
                                    <Border Grid.Row="0" 
                                            Background="#44000000" 
                                            CornerRadius="6,6,0,0"
                                            Margin="2">
                                        <Grid>
                                            <!-- 预览图 -->
                                            <Image Source="{Binding ThumbnailPath}"
                                                   Stretch="UniformToFill"
                                                   Visibility="{Binding ThumbnailPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                            
                                            <!-- 默认图标 -->
                                            <StackPanel HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding ThumbnailPath, Converter={StaticResource InverseStringToVisibilityConverter}}">
                                                <TextBlock Text="🎬" FontSize="32" HorizontalAlignment="Center"/>
                                                <TextBlock Text="MP4" FontSize="12" Foreground="#CCCCCC" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <!-- 播放按钮覆盖层 -->
                                            <Border Background="#66000000" 
                                                    CornerRadius="6,6,0,0">
                                                <Button Style="{StaticResource PlayButtonStyle}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding DataContext.PlayVideoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="▶" FontSize="16" Margin="0,0,5,0"/>
                                                        <TextBlock Text="播放"/>
                                                    </StackPanel>
                                                </Button>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- 信息区域 -->
                                    <StackPanel Grid.Row="1" 
                                                Margin="10,8,10,10">
                                        <!-- 视频名称 -->
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>
                                        
                                        <!-- 详细信息 -->
                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FormattedFileSize}"
                                                           FontSize="11"
                                                           Foreground="#AAAAAA"/>
                                                <TextBlock Text="{Binding ModifiedTime, StringFormat='yyyy/MM/dd'}"
                                                           FontSize="11"
                                                           Foreground="#AAAAAA"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding FormattedDuration}"
                                                       FontSize="11"
                                                       Foreground="#CCCCCC"
                                                       VerticalAlignment="Bottom"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>