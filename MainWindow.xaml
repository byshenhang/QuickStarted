<Window
    x:Class="QuickStarted.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:QuickStarted.Controls"
    xmlns:converters="clr-namespace:QuickStarted.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickStarted"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:QuickStarted.Views"
    x:Name="MainWindowElement"
    Title="QuickStarted"
    AllowsTransparency="True"
    Background="Transparent"
    Opacity="0"
    Topmost="True"
    Visibility="Hidden"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  转换器  -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  索引转换器（留给上层或其它地方复用） -->
        <converters:IndexToArrayIndexConverter x:Key="IndexToArrayIndexConverter" />

        <!--  页面索引相等性转换器  -->
        <converters:PageIndexEqualityConverter x:Key="PageIndexEqualityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:FilePathToDirectoryConverter x:Key="FilePathToDirectoryConverter" />

        <!--  淡入动画  -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="MainWindowElement"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <!--  淡出动画  -->
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="MainWindowElement"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>

        <!--  顶部导航按钮样式  -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A5A5A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!--  半透明黑色背景覆盖整个屏幕  -->
        <Rectangle Fill="#CC000000" />

        <!--  内容区域全屏显示  -->
        <Border
            Margin="30"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="0">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题栏  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="QuickStarted - " />
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#4FC3F7"
                        Text="{Binding CurrentProgram}" />
                </StackPanel>

                <!--  主导航按钮  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding ShowShortcutKeysCommand}"
                        Content="快捷键"
                        Style="{StaticResource TabButtonStyle}" />
                    <Button
                        Command="{Binding ShowNotesCommand}"
                        Content="笔记"
                        Style="{StaticResource TabButtonStyle}" />
                    <Button
                        Command="{Binding ShowVideosCommand}"
                        Content="视频"
                        Style="{StaticResource TabButtonStyle}" />
                </StackPanel>

                <!--  内容区域：三个 UserControl，Visibility 绑定到 MainViewModel -->
                <Grid Grid.Row="2">
                    <views:ShortcutKeysView
                        DataContext="{Binding ShortcutKeysVM}"
                        Visibility="{Binding DataContext.IsShortcutKeysVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <views:NotesView
                        DataContext="{Binding NotesVM}"
                        Visibility="{Binding DataContext.IsNotesVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <views:VideosView
                        DataContext="{Binding VideosVM}"
                        Visibility="{Binding DataContext.IsVideosVisible, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
            </Grid>
        </Border>

        <!--  右下角显示当前Hook窗口信息，用于调试  -->
        <StackPanel
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#40000000"
            Orientation="Vertical">
            <TextBlock
                MaxWidth="300"
                Padding="8,4,8,2"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#4FC3F7"
                Text="{Binding CurrentHookProcessName, StringFormat='Process: {0}'}"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                MaxWidth="300"
                Padding="8,2,8,4"
                FontSize="16"
                Foreground="#888888"
                Text="{Binding CurrentHookWindowTitle, StringFormat='Title: {0}'}"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>
    </Grid>
</Window>