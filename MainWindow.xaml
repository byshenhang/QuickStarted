<Window
    x:Class="QuickStarted.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:QuickStarted.Controls"
    xmlns:converters="clr-namespace:QuickStarted.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickStarted"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindowElement"
    Title="QuickStarted"
    AllowsTransparency="True"
    Background="Transparent"
    Opacity="0"
    Topmost="True"
    Visibility="Hidden"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  转换器  -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  索引转换器  -->
        <converters:IndexToArrayIndexConverter x:Key="IndexToArrayIndexConverter" />

        <!--  页面索引相等性转换器  -->
        <converters:PageIndexEqualityConverter x:Key="PageIndexEqualityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:FilePathToDirectoryConverter x:Key="FilePathToDirectoryConverter" />

        <!--  淡入动画  -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="MainWindowElement"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <!--  淡出动画  -->
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="MainWindowElement"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>

        <!--  按钮样式  -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A5A5A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  快捷键项样式  -->
        <Style x:Key="ShortcutItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#80000000" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#4A4A4A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Style.Triggers>
                <!--  鼠标悬停效果  -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!--  缩放动画  -->
                                <DoubleAnimation
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                    To="1.05"
                                    Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                    To="1.05"
                                    Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <!--  背景色动画  -->
                                <ColorAnimation
                                    Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                    To="#A0000000"
                                    Duration="0:0:0.2" />
                                <!--  边框色动画  -->
                                <ColorAnimation
                                    Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"
                                    To="#4FC3F7"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!--  恢复缩放  -->
                                <DoubleAnimation
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                    To="1"
                                    Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                    To="1"
                                    Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <!--  恢复背景色  -->
                                <ColorAnimation
                                    Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                    To="#80000000"
                                    Duration="0:0:0.2" />
                                <!--  恢复边框色  -->
                                <ColorAnimation
                                    Storyboard.TargetProperty="(BorderBrush).(SolidColorBrush.Color)"
                                    To="#4A4A4A"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  自定义 MarkdownViewer 样式  -->
        <Style x:Key="CustomMarkdownStyle" TargetType="controls:MarkdownViewer">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <Grid>
        <!--  半透明黑色背景覆盖整个屏幕  -->
        <Rectangle Fill="#CC000000" />

        <!--  内容区域全屏显示  -->
        <Border
            Margin="30"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="0">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题栏  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="QuickStarted - " />
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#4FC3F7"
                        Text="{Binding CurrentProgram}" />
                </StackPanel>

                <!--  主导航按钮  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding ShowShortcutKeysCommand}"
                        Content="快捷键"
                        Style="{StaticResource TabButtonStyle}" />
                    <Button
                        Command="{Binding ShowNotesCommand}"
                        Content="笔记"
                        Style="{StaticResource TabButtonStyle}" />
                </StackPanel>


                <!--  内容区域  -->
                <Grid Grid.Row="2">
                    <!--  快捷键视图  -->
                    <StackPanel Visibility="{Binding IsShortcutKeysVisible, Converter={StaticResource BooleanToVisibilityConverter}}">


                        <!--  页面名称显示  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#4FC3F7"
                            Text="{Binding CurrentPageName}" />

                        <!--  页面进度指示器  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#FFD700"
                            Text="{Binding CurrentPageProgress}" />

                        <!--  翻页按钮区域  -->
                        <Grid Height="40" Margin="0,0,0,10">
                            <!--  上一页按钮  -->
                            <Button
                                Width="30"
                                Height="30"
                                Margin="50,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#40000000"
                                BorderThickness="0"
                                Command="{Binding PreviousPageCommand}"
                                Opacity="0.6"
                                ToolTip="上一页">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1" />
                                                <Setter Property="Background" Value="#60000000" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="#4FC3F7"
                                                Text="‹" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!--  下一页按钮  -->
                            <Button
                                Width="30"
                                Height="30"
                                Margin="0,0,50,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="#40000000"
                                BorderThickness="0"
                                Command="{Binding NextPageCommand}"
                                Opacity="0.6"
                                ToolTip="下一页">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1" />
                                                <Setter Property="Background" Value="#60000000" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="#4FC3F7"
                                                Text="›" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!--  页面标签栏  -->
                            <ListView
                                Margin="20,0,5,15"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding ShortcutKeyPages}"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Margin="2,0"
                                            Command="{Binding DataContext.JumpToPageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Index, Converter={StaticResource IndexToArrayIndexConverter}}"
                                            Content="{Binding Name}"
                                            Cursor="Hand"
                                            FontSize="12"
                                            FontWeight="Medium">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#66000000" />
                                                    <Setter Property="Foreground" Value="#E0E0E0" />
                                                    <Setter Property="BorderBrush" Value="#80FFFFFF" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect
                                                                BlurRadius="2"
                                                                Direction="270"
                                                                Opacity="0.3"
                                                                ShadowDepth="2"
                                                                Color="Transparent" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="2">
                                                                    <Border.Effect>
                                                                        <BlurEffect Radius="0" />
                                                                    </Border.Effect>
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Trigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation
                                                                                        Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)"
                                                                                        To="1"
                                                                                        Duration="0:0:0.2" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.EnterActions>
                                                                        <Trigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation
                                                                                        Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)"
                                                                                        To="0"
                                                                                        Duration="0:0:0.2" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.ExitActions>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <!--  鼠标悬停样式  -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#80FFFFFF" />
                                                            <Setter Property="Foreground" Value="#FFFFFF" />
                                                            <Setter Property="BorderBrush" Value="#CCFFFFFF" />
                                                        </Trigger>
                                                        <!--  鼠标按下样式  -->
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#CC007ACC" />
                                                            <Setter Property="BorderBrush" Value="#FF007ACC" />
                                                            <Setter Property="Foreground" Value="#FFFFFF" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                        </Grid>

                        <ScrollViewer
                            Height="700"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ScrollBar">
                                                <Grid Width="8" Background="#40000000">
                                                    <Track Name="PART_Track" IsDirectionReversed="True">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton
                                                                Width="0"
                                                                Height="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Command="ScrollBar.PageUpCommand" />
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Rectangle
                                                                            Fill="#CC000000"
                                                                            RadiusX="4"
                                                                            RadiusY="4">
                                                                            <Rectangle.Style>
                                                                                <Style TargetType="Rectangle">
                                                                                    <Style.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Fill" Value="#FF000000" />
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Rectangle.Style>
                                                                        </Rectangle>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton
                                                                Width="0"
                                                                Height="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Command="ScrollBar.PageDownCommand" />
                                                        </Track.IncreaseRepeatButton>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ScrollViewer.Resources>

                            <!--  快捷键内容区域，带翻页动画  -->
                            <Grid x:Name="ShortcutKeysContainer" ClipToBounds="True">
                                <Grid.Resources>
                                    <!--  页面切换动画  -->
                                    <Storyboard x:Key="SlideInFromRight">
                                        <DoubleAnimation
                                            Storyboard.TargetName="ShortcutKeysContent"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            From="300"
                                            To="0"
                                            Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="ShortcutKeysContent"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="1"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                    <Storyboard x:Key="SlideInFromLeft">
                                        <DoubleAnimation
                                            Storyboard.TargetName="ShortcutKeysContent"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            From="-300"
                                            To="0"
                                            Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="ShortcutKeysContent"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="1"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </Grid.Resources>

                                <ItemsControl
                                    x:Name="ShortcutKeysContent"
                                    HorizontalAlignment="Center"
                                    ItemsSource="{Binding ShortcutKeys}">
                                    <ItemsControl.RenderTransform>
                                        <TranslateTransform />
                                    </ItemsControl.RenderTransform>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Width="200"
                                                Height="130"
                                                Margin="10"
                                                Style="{StaticResource ShortcutItemStyle}">
                                                <StackPanel>
                                                    <TextBlock
                                                        Margin="0,0,0,5"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        Foreground="#4FC3F7"
                                                        Text="{Binding ShortcutKeyValue}" />
                                                    <TextBlock
                                                        Margin="0,0,0,3"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="#CCCCCC"
                                                        Text="{Binding Description}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>

                    <!--  笔记视图  -->
                    <Grid Visibility="{Binding IsShortcutKeysVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  分类列表  -->
                        <Border
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            BorderBrush="#664FC3F7"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="10,10,10,5"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="分类" />
                                <ItemsControl ItemsSource="{Binding NoteCategories}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Padding="10,5"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding CategoryName}"
                                                Foreground="#CCCCCC" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!--  文件列表  -->
                        <Border
                            Grid.Column="1"
                            Margin="5,0"
                                                   BorderBrush="#664FC3F7"
                       BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="10,10,10,5"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="文件" />
                                <ItemsControl ItemsSource="{Binding SelectedCategory.NoteFiles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Padding="10,5"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.SelectNoteFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding FileName}"
                                                Foreground="#CCCCCC" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!--  Markdown内容显示  -->
                        <Border
                            Grid.Column="2"
                            Margin="5,0,0,0"
                                                   BorderBrush="#664FC3F7"
                       BorderThickness="1"
                            CornerRadius="5">
                            <ScrollViewer Padding="15" Background="Transparent">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ScrollBar">
                                                    <Grid Width="18" Background="#664FC3F7">
                                                        <Track Name="PART_Track" IsDirectionReversed="True">
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton
                                                                    Width="0"
                                                                    Height="0"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Command="ScrollBar.PageUpCommand" />
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.Thumb>
                                                                <Thumb>
                                                                    <Thumb.Template>
                                                                        <ControlTemplate TargetType="Thumb">
                                                                            <Rectangle
                                                                                Fill="#CC000000"
                                                                                RadiusX="4"
                                                                                RadiusY="4">
                                                                                <Rectangle.Style>
                                                                                    <Style TargetType="Rectangle">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Fill" Value="#FF000000" />
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Rectangle.Style>
                                                                            </Rectangle>
                                                                        </ControlTemplate>
                                                                    </Thumb.Template>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton
                                                                    Width="0"
                                                                    Height="0"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Command="ScrollBar.PageDownCommand" />
                                                            </Track.IncreaseRepeatButton>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollViewer.Resources>

                                <controls:MarkdownViewer
                                    BaseUri="{Binding SelectedNoteFile.FilePath, Converter={StaticResource FilePathToDirectoryConverter}}"
                                    Markdown="{Binding MarkdownContent}"
                                    Style="{StaticResource CustomMarkdownStyle}" />
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!--  右下角显示当前Hook窗口信息，用于调试  -->
        <StackPanel
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#40000000"
            Orientation="Vertical">
            <TextBlock
                MaxWidth="300"
                Padding="8,4,8,2"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#4FC3F7"
                Text="{Binding CurrentHookProcessName, StringFormat='Process: {0}'}"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                MaxWidth="300"
                Padding="8,2,8,4"
                FontSize="16"
                Foreground="#888888"
                Text="{Binding CurrentHookWindowTitle, StringFormat='Title: {0}'}"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>
    </Grid>
</Window>
